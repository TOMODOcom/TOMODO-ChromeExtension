{
    "version": "1",
    "name": "My Extension",
    "manifest_version": 2,
    "description": "",
    "background": {
        "persistent": false,
        "page": "background.html"
	},
    "browser_action": {
        "default_icon": {
            "19": "images/faviconTOMODO19.png",
            "38": "images/faviconTOMODO38.png"
        },
        "default_title": "Google Mail",
        "default_popup": "popup.html"
    },
    "permissions": [
        "alarms",
        "tabs",
        "webNavigation",
        "*://*/*",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["main.js"]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdn.mxpnl.com/ 'unsafe-eval'; object-src 'self';"
}