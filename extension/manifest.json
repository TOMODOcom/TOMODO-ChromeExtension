{
    "version": "1.1.1.3",
    "name": "[name]",
    "short_name": "[short name]",
    "manifest_version": 2,
    "description": "[description]",
    "author": "[author]",
    "background": {
        "persistent": false,
        "page": "background.html"
	},
    "browser_action": {
        "default_icon": {
            "19": "images/faviconTOMODO19.png",
            "38": "images/faviconTOMODO38.png"
        },
        "default_title": "click for list of mods",
        "default_popup": "popup.html"
    },
    "permissions": [
        "alarms",
        "tabs",
        "webNavigation",
        "*://*/*",
        "activeTab"
    ],
    "content_scripts": [
        {
            "matches": ["*://*/*"],
            "js": ["main.js"]
        }
    ],
    "content_security_policy": "script-src 'self' https://cdn.mxpnl.com/ 'unsafe-eval'; object-src 'self';"
}